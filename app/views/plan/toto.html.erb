<table style="border:1px solid black">
    <tr>
      <%= form_for @issue, url: { controller: "issues", action: "create" }, remote: false do |f| %>
      <td></td>
      <td><%= f.text_field :subject  %></td>

      <td><%= select_tag('issue[assigned_to_id]',
                    content_tag('option', l(:label_nobody), :value => 'none') +
                    principals_options_for_select(@issue.assignable_users, @issue.assigned_to)) %></td>

      <td><%= select_tag('issue[status_id]',
                    options_from_collection_for_select(@issue.new_statuses_allowed_to(User.current), :id, :name, @issue.status_id),
                    :onchange => "") %></td>

      <td><%= select_tag('issue[priority_id]',
                 options_from_collection_for_select(IssuePriority.active, :id, :name, @issue.priority_id)) %></td>

      <td><%= date_field_tag 'issue[due_date]', '', :value => @issue.due_date, :size => 10 %><%= calendar_for('issue_due_date') %></td>


      <td>
        <%= text_area_tag 'issue[notes]'%>
      </td>

      <td><%= submit_tag l(:button_submit) %>
      <%= hidden_field_tag('issue[project_id]', "1") %>
      <%= hidden_field_tag('issue[parent_issue_id]', "3") %>
      <%= hidden_field_tag('back_url', request.original_url) %></td>
      <% end %>
    </tr>
</table>
